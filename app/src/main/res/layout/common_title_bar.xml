<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/common_title_bar_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_bar_height"
                android:background="#ffffff">
    <ImageView
        android:id="@+id/title_bar_left_iv"
        android:layout_width="@dimen/common_title_bar_height"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:paddingRight="5dp"
        android:src="@drawable/title_bar_back"/>
    <TextView
        android:id="@+id/title_bar_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
		android:layout_centerInParent="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>
    <ImageView
        android:id="@+id/title_bar_right_iv"
        android:layout_width="@dimen/common_title_bar_height"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"/>
</RelativeLayout>
